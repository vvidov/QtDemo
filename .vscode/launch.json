{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Tests",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/threads_test",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PATH",
                    "value": "/usr/local/bin:/usr/bin:${env:PATH}"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                },
                {
                    "description": "Print Object Settings",
                    "text": "-gdb-set print object on",
                    "ignoreFailures": true
                },
                {
                    "description": "Print Array Settings",
                    "text": "-gdb-set print array on",
                    "ignoreFailures": true
                },
                {
                    "description": "Print Array Indexes",
                    "text": "-gdb-set print array-indexes on",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Tests",
            "miDebuggerPath": "/usr/bin/gdb"
        },
        {
            "name": "Debug Single Test",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/threads_test",
            "args": [
                "--gtest_filter=ThreadTest.MultipleThreadsAccess"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PATH",
                    "value": "/usr/local/bin:/usr/bin:${env:PATH}"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                },
                {
                    "description": "Print Object Settings",
                    "text": "-gdb-set print object on",
                    "ignoreFailures": true
                },
                {
                    "description": "Print Array Settings",
                    "text": "-gdb-set print array on",
                    "ignoreFailures": true
                },
                {
                    "description": "Print Array Indexes",
                    "text": "-gdb-set print array-indexes on",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Tests",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}
